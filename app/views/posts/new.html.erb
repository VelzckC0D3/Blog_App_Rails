<div class="post-form">
  <div class="formCont">
    <h1 class="form-title">New Post</h1>
    <%= form_with(model: @post, url: user_posts_path(current_user)) do |form| %>
      <div class="form-group">
        <%= form.text_field :title, class: "form-control", placeholder: "Title", id: "post_title" %>
      </div>

      <div class="form-group">
        <%= form.text_area :text, class: "form-control", rows: 4, placeholder: "Content", id: "post_content" %>
      </div>
      
      <%= form.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
